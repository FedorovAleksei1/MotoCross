@using Questionary.Web.Areas.Admin.ViewModel.AdminViewModel
@model AdminCardTeamUserViewModel;

<style>
    .textArea{
        height: 300px;
        width: 480px;
    }
</style>
@*@{
    ViewData["Title"] = "Добавление окна тимы";
}*@
<div class="container ">
    <h2>Добавление  окна Команды</h2>
    <form method="post" enctype="multipart/form-data">

        <div>
            <label>
                Фамилия
                @Html.TextBoxFor(x => Model.CardPerson.LastName, new { @class = "form-control"})
            </label>
        </div>
        <div>
            <label>
                Имя
                @Html.TextBoxFor(x => Model.CardPerson.FirstName, new { @class = "form-control"})
            </label>
        </div>
        <div>
            <label>
                Город
                @Html.TextBoxFor(x => Model.CardPerson.City, new { @class = "form-control"})
            </label>
        </div>
        <div>
            <label>
                Год
                @* @Html.TextBoxFor(x => Model.CardPerson.Year, new { @class = "form-control"})*@
                <input type="date" asp-for="@Model.CardPerson.Year" class="form-control" />

            </label>
        </div>
        <div class="textArea">
            <label>
                Факты
                @Html.TextAreaFor(x => Model.CardPerson.Facts, new { @class = "form-control textArea", placeholder="Введите текст", data_readonly="" })
        
            </label>
        </div>
        <br />
        <div >
            <label>
                Стартовый номер
                @Html.TextBoxFor(x => Model.CardPerson.StartNumber, new { @class = "form-control"})
            </label>
        </div>
        <div>
            <label>
                Победы
                @Html.TextBoxFor(x => Model.CardPerson.Experience, new { @class = "form-control"})
            </label>
        </div>
        <div>
            <label>
                Лет в анрагии
                @Html.TextBoxFor(x => Model.CardPerson.YearAnarch, new { @class = "form-control"})
            </label>
        </div>
        <div>
            <label>
                Хобби
                @Html.TextBoxFor(x => Model.CardPerson.Hobby, new { @class = "form-control"})
            </label>
        </div>
        <br />
        <div>
            <label>
                <input type="file" asp-for="UploadPhoto" class="form-control" />
            </label>
        </div>
        <br />

        <input type="submit" class="btn btn-primary" value="Сохранить" />

    </form>
</div>