@model Questionary.Web.Areas.Admin.ViewModels.AdminViewModel.ChangePasswordViewModel;
@{
    ViewBag.Title = "Изменение пароля";
}
<h3>
    Изменение пароля для пользователя
    <span style="color: #f06a72">@Model.Email</span>
</h3>

<div class="form">
    @Html.HiddenFor(x => x.Email)
    <form asp-action="ChangePassword" asp-controller="AdminUser" asp-area="Admin">
        <div asp-validation-summary="ModelOnly" class="text-danger error-messages"></div>

        <div class="form-item">
            <label asp-for="NewPassword">Новый пароль</label>
            <input type="text" asp-for="NewPassword" />
        </div>
        <div class="form-item form-item-submit bottom-form-buttons">
            <a class="button red-button" asp-action="Index">Вернуться назад</a>
            <input type="submit" value="Сохранить" class="button" />
        </div>
    </form>
</div>